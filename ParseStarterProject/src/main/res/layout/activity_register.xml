<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_gravity="center_vertical"
    tools:context="com.parse.starter.activity.RegisterActivity"
    android:gravity="center_vertical">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="113dp"
        android:id="@+id/imageView2"
        android:background="@drawable/usuario"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:background="@drawable/textbox_background"
        android:ems="10"
        android:textColor="@android:color/white"
        android:padding="16dp"
        android:id="@+id/et_signup_nameId"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:hint="User name"
        android:textColorHint="@android:color/white"
        android:layout_marginTop="15dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:background="@drawable/textbox_background"
        android:ems="10"
        android:textColor="@android:color/white"
        android:padding="16dp"
        android:id="@+id/et_signup_emailId"
        android:layout_below="@+id/et_signup_nameId"
        android:layout_centerHorizontal="true"
        android:hint="E-mail"
        android:textColorHint="@android:color/white"
        android:layout_marginTop="15dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:background="@drawable/textbox_background"
        android:ems="10"
        android:textColor="@android:color/white"
        android:padding="16dp"
        android:id="@+id/et_signup_passwordId"
        android:layout_below="@+id/et_signup_emailId"
        android:layout_centerHorizontal="true"
        android:hint="Password"
        android:textColorHint="@android:color/white"
        android:layout_marginTop="15dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_sign_up"
        android:id="@+id/bt_signupId"
        android:textColor="@android:color/white"
        android:background="@drawable/background_button"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/et_signup_passwordId"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/sign_in"
        android:id="@+id/tv_signup_lloginId"
        android:textColor="@android:color/white"
        android:layout_below="@+id/bt_signupId"
        android:layout_centerHorizontal="true"
        android:onClick="openUserLogin" />
</RelativeLayout>
